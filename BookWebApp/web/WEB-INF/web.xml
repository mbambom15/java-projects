<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetBookServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.GetBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyBookServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.ModifyBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountRecordsServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.CountRecordsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindBookServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.FindBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBookServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.ViewBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.RemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetBookServlet</servlet-name>
        <url-pattern>/GetBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyBookServlet</servlet-name>
        <url-pattern>/ModifyBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountRecordsServlet</servlet-name>
        <url-pattern>/CountRecordsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindBookServlet</servlet-name>
        <url-pattern>/FindBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewBookServlet</servlet-name>
        <url-pattern>/ViewBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveServlet</servlet-name>
        <url-pattern>/RemoveServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/page_not_found.jsp</location>
    </error-page>
</web-app>
